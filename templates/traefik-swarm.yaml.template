entryPoints:
  web:
    address: ":80"
    http:
      redirections:
        entryPoint:
          to: websecure
          scheme: https
  websecure:
    address: ":443"

serversTransports:
  default:
    insecureSkipVerify: false

providers:
  swarm:
    endpoint: "tcp://127.0.0.1:2377"
    exposedByDefault: false

  file:
    filename: "/etc/traefik/dynamic.yaml"
    watch: true

api:
  dashboard: true
  debug: false

ping:
  entryPoint: web
  manualRouting: false
  terminatingStatusCode: 503

metrics:
  prometheus:
    entryPoint: websecure
    buckets:
      - 0.1
      - 0.3
      - 1.2
      - 5.0

log:
  format: json
  level: INFO
